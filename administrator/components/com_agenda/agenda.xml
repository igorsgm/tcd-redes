<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_agenda</name>
    <creationDate>2014-10-09</creationDate>
    <copyright>Copyright (C) 2013. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>iComunicação</author>
    <authorEmail>contato@icomunicacao.com.br</authorEmail>
    <authorUrl>http://www.icomunicacao.com.br</authorUrl>
    <version>1.0.0</version>
    <description>Agenda institucional e de usuários</description>
    
    
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>agenda.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>assets</folder>
    </files>
    <languages folder="site">
        
			<language tag="en-GB">language/en-GB/en-GB.com_agenda.ini</language>
    </languages>
    <administration>
        <menu img="components/com_agenda/assets/images/s_com_agenda.png" >COM_AGENDA</menu>
        <submenu>
            
			<menu link="option=com_agenda&amp;view=agendas" view="agendas" img="components/com_agenda/assets/images/s_agendas.png" alt="Agenda/Agendas">COM_AGENDA_TITLE_AGENDAS</menu>

			<menu link="option=com_categories&amp;extension=com_agenda" view="categories" img="components/com_agenda/assets/images/s_agendas.png" alt="Agenda/Categories">COM_AGENDA_AGENDAS_CATEGORIA</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>agenda.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
        <languages folder="administrator">
            
			<language tag="en-GB">language/en-GB/en-GB.com_agenda.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_agenda.sys.ini</language>
        </languages>
    </administration>
    <plugins>
        <plugin group="search" plugin="agenda"/>
    </plugins>
    
</extension>
