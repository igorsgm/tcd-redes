<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
        <field name="ordering"/>
        <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field name="checked_out" type="hidden" filter="unset"/>
        <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
        <field name="created_by" type="createdby" label="COM_OUVIDORIA_FORM_LBL_COMENTARIO_CREATED_BY"
               description="COM_OUVIDORIA_FORM_DESC_COMENTARIO_CREATED_BY" hidden="true" hint="COM_OUVIDORIA_FORM_LBL_COMENTARIO_CREATED_BY"/>
        <field name="created_by_solicitante" type="foreignkey" label="COM_OUVIDORIA_FORM_LBL_COMENTARIO_CREATED_BY_SOLICITANTE"
               description="COM_OUVIDORIA_FORM_DESC_COMENTARIO_CREATED_BY_SOLICITANTE" class="inputbox" input_type="list"
               table="#__ouvidoria_solicitantes" key_field="id" value_field="nome" default="0"/>
        <field name="id_user_consultado" filter="safehtml" type="text" label="COM_OUVIDORIA_FORM_LBL_COMENTARIO_ID_USER_CONSULTADO"
               description="COM_OUVIDORIA_FORM_DESC_COMENTARIO_ID_USER_CONSULTADO" hint="COM_OUVIDORIA_FORM_LBL_COMENTARIO_ID_USER_CONSULTADO"/>
        <field name="modified_by" type="modifiedby" default="0" label="COM_OUVIDORIA_FORM_LBL_COMENTARIO_MODIFIED_BY"
               description="COM_OUVIDORIA_FORM_DESC_COMENTARIO_MODIFIED_BY" hidden="true" hint="COM_OUVIDORIA_FORM_LBL_COMENTARIO_MODIFIED_BY"/>
        <field name="updated_at" type="timecreated" label="COM_OUVIDORIA_FORM_LBL_COMENTARIO_UPDATED_AT"
               description="COM_OUVIDORIA_FORM_DESC_COMENTARIO_UPDATED_AT" hidden="true" hint="COM_OUVIDORIA_FORM_LBL_COMENTARIO_UPDATED_AT"/>
        <field name="created_at" type="timecreated" label="COM_OUVIDORIA_FORM_LBL_COMENTARIO_CREATED_AT"
               description="COM_OUVIDORIA_FORM_DESC_COMENTARIO_CREATED_AT" hidden="true" hint="COM_OUVIDORIA_FORM_LBL_COMENTARIO_CREATED_AT"/>
        <field name="id_solicitacao" type="foreignkey" label="COM_OUVIDORIA_FORM_LBL_COMENTARIO_ID_SOLICITACAO"
               description="COM_OUVIDORIA_FORM_DESC_COMENTARIO_ID_SOLICITACAO" class="inputbox" input_type="list" table="#__ouvidoria_solicitacoes"
               key_field="id" value_field="protocolo" required="true" message="É necessário informar a solicitação do comentário." default=""/>
        <field name="anexo" type="FileMultiple" label="COM_OUVIDORIA_FORM_LBL_COMENTARIO_ANEXO" description="COM_OUVIDORIA_FORM_DESC_COMENTARIO_ANEXO"
               hint="COM_OUVIDORIA_FORM_LBL_COMENTARIO_ANEXO"/>
        <field name="texto" filter="safehtml" type="textarea" required="true" message="É necessário informar um texto para o comentário."
               label="COM_OUVIDORIA_FORM_LBL_COMENTARIO_TEXTO" description="COM_OUVIDORIA_FORM_DESC_COMENTARIO_TEXTO"
               hint="COM_OUVIDORIA_FORM_LBL_COMENTARIO_TEXTO"/>
        <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox"
               size="45" labelclass="control-label"/>
    </fieldset>
</form>
