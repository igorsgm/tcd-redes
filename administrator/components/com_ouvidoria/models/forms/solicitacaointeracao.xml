<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
        <field name="ordering"/>
        <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field name="checked_out" type="hidden" filter="unset"/>
        <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
        <field name="created_by" type="createdby" default="0" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_CREATED_BY" description="COM_OUVIDORIA_FORM_DESC_SOLICITACAOINTERACAO_CREATED_BY" hidden="true" hint="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_CREATED_BY"/>
        <field name="modified_by" type="modifiedby" default="0" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_MODIFIED_BY" description="COM_OUVIDORIA_FORM_DESC_SOLICITACAOINTERACAO_MODIFIED_BY" hidden="true" hint="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_MODIFIED_BY"/>
        <field name="updated_at" type="timecreated" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_UPDATED_AT" description="COM_OUVIDORIA_FORM_DESC_SOLICITACAOINTERACAO_UPDATED_AT" hidden="true" hint="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_UPDATED_AT"/>
        <field name="created_at" type="timecreated" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_CREATED_AT" description="COM_OUVIDORIA_FORM_DESC_SOLICITACAOINTERACAO_CREATED_AT" hidden="true" hint="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_CREATED_AT"/>
        <field name="nome" filter="safehtml" type="text" required="true" message="É necessário informar o nome do status." label="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_NOME" description="COM_OUVIDORIA_FORM_DESC_SOLICITACAOINTERACAO_NOME"
               hint="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_NOME"/>
        <field name="id_status_vinculado" type="foreignkey" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAOINTERACAO_ID_STATUS_VINCULADO" description="COM_OUVIDORIA_FORM_DESC_SOLICITACAOINTERACAO_ID_STATUS_VINCULADO" class="inputbox" input_type="list" table="#__ouvidoria_solicitacoes_status"
               key_field="id" value_field="nome" default="0"/>
        <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
    </fieldset>
</form>
