<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_OUVIDORIA_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string"/>

        <field name="state"
               type="status"
               label="COM_OUVIDORIA_FILTER_STATE"
               description="COM_OUVIDORIA_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="created_by_solicitante" type="sql" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAOLOG_CREATED_BY_SOLICITANTE" query="SELECT '' AS `id`, 'COM_OUVIDORIA_SOLICITACOESLOGS_CREATED_BY_SOLICITANTE_FILTER' AS `val` UNION SELECT `id`, `nome` AS val FROM `#__ouvidoria_solicitantes`"
               key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
        <field name="id_solicitacao" type="sql" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAOLOG_ID_SOLICITACAO" query="SELECT '' AS `id`, 'COM_OUVIDORIA_SOLICITACOESLOGS_ID_SOLICITACAO_FILTER' AS `val` UNION SELECT `id`, `protocolo` AS val FROM `#__ouvidoria_solicitacoes`" key_field="id"
               value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
        <field name="id_interacao" type="sql" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAOLOG_ID_INTERACAO" query="SELECT '' AS `id`, 'COM_OUVIDORIA_SOLICITACOESLOGS_ID_INTERACAO_FILTER' AS `val` UNION SELECT `id`, `nome` AS val FROM `#__ouvidoria_solicitacoes_interacoes`" key_field="id"
               value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option>
            <option value="a.`id` DESC">ID Descending</option>
            <option value="a.`ordering` ASC">Order Ascending</option>
            <option value="a.`ordering` DESC">Order Descending</option>
            <option value="a.`state` ASC">State Ascending</option>
            <option value="a.`state` DESC">State Descending</option>
            <option value="a.`created_by_solicitante` ASC">Solicitante Ascending</option>
            <option value="a.`created_by_solicitante` DESC">Solicitante Descending</option>
            <option value="a.`id_solicitacao` ASC">Solicitação (protocolo) Ascending</option>
            <option value="a.`id_solicitacao` DESC">Solicitação (protocolo) Descending</option>
            <option value="a.`id_interacao` ASC">Interação Ascending</option>
            <option value="a.`id_interacao` DESC">Interação Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>