<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_OUVIDORIA_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string"/>

        <field name="state"
               type="status"
               label="COM_OUVIDORIA_FILTER_STATE"
               description="COM_OUVIDORIA_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="created_at.from" label="COM_OUVIDORIA_LIST_LBL_SOLICITACOES_CREATED_AT_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="true" translateformat="true" hint="COM_OUVIDORIA_LIST_LBL_SOLICITACOES_CREATED_AT_FILTER_FROM"/>
        <field name="created_at.to" label="COM_OUVIDORIA_LIST_LBL_SOLICITACOES_CREATED_AT_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="true" translateformat="true" hint="COM_OUVIDORIA_LIST_LBL_SOLICITACOES_CREATED_AT_FILTER_TO"/>
        <field name="id_tipo" type="sql" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAO_ID_TIPO" query="SELECT '' AS `id`, 'COM_OUVIDORIA_SOLICITACOES_ID_TIPO_FILTER' AS `val` UNION SELECT `id`, `nome` AS val FROM `#__ouvidoria_solicitacoes_tipos`" key_field="id" value_field="val" class="inputbox"
               onchange="this.form.submit()" translate="true"/>
        <field name="id_diretoria_responsavel" type="sql" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAO_ID_DIRETORIA_RESPONSAVEL" query="SELECT '' AS `id`, 'COM_OUVIDORIA_SOLICITACOES_ID_DIRETORIA_RESPONSAVEL_FILTER' AS `val` UNION SELECT `id`, `nome` AS val FROM `#__ouvidoria_diretorias`"
               key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
        <field name="status" type="sql" label="COM_OUVIDORIA_FORM_LBL_SOLICITACAO_STATUS" query="SELECT '' AS `id`, 'COM_OUVIDORIA_SOLICITACOES_STATUS_FILTER' AS `val` UNION SELECT `id`, `nome` AS val FROM `#__ouvidoria_solicitacoes_status`" key_field="id" value_field="val" class="inputbox"
               onchange="this.form.submit()" translate="true"/>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option>
            <option value="a.`id` DESC">ID Descending</option>
            <option value="a.`ordering` ASC">Order Ascending</option>
            <option value="a.`ordering` DESC">Order Descending</option>
            <option value="a.`state` ASC">State Ascending</option>
            <option value="a.`state` DESC">State Descending</option>
            <option value="a.`created_at` ASC">Criado em Ascending</option>
            <option value="a.`created_at` DESC">Criado em Descending</option>
            <option value="a.`id_solicitante` ASC">Solicitante Ascending</option>
            <option value="a.`id_solicitante` DESC">Solicitante Descending</option>
            <option value="a.`id_tipo` ASC">Tipo Ascending</option>
            <option value="a.`id_tipo` DESC">Tipo Descending</option>
            <option value="a.`id_diretoria_responsavel` ASC">Diretoria Responsável Ascending</option>
            <option value="a.`id_diretoria_responsavel` DESC">Diretoria Responsável Descending</option>
            <option value="a.`texto` ASC">Texto Ascending</option>
            <option value="a.`texto` DESC">Texto Descending</option>
            <option value="a.`protocolo` ASC">Protocolos Ascending</option>
            <option value="a.`protocolo` DESC">Protocolos Descending</option>
            <option value="a.`status` ASC">Status Ascending</option>
            <option value="a.`status` DESC">Status Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>